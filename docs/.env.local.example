# Twilio WhatsApp Configuration
# Copy this file to .env.local and fill in your actual credentials

# Your Twilio Account SID from https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Twilio Auth Token from https://console.twilio.com/
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Twilio WhatsApp number (usually +14155238886 for sandbox)
# For production, use your approved WhatsApp Business number
TWILIO_WHATSAPP_FROM=+14155238886

# Your business WhatsApp number to receive notifications
# Must be in international format with country code
BUSINESS_WHATSAPP_NUMBER=+358401234567

# Email Configuration (keep your existing email config)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@example.com

# Sanity CMS Configuration (keep your existing Sanity config)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_api_token

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000